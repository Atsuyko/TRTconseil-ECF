{% extends 'base.html.twig' %}

{% block title %}Sign In !{% endblock %}

{% block body %}
<div class="container d-flex align-item-center justify-content-center form-signin w-100 m-auto mt-4">
    <form method="post">
        {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a
                href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal mt-4">Veuillez vous connecter</h1>
        <label for="inputEmail mt-4">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
            autocomplete="email" required autofocus>
        <label for="inputPassword mt-4">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password"
            required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-primary mt-4" type="submit">
            Connexion
        </button>
    </form>
</div>
{% endblock %}