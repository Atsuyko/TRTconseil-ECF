{% extends 'base.html.twig' %}

{% block title %}Validation en attente{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Listes des candidats à valider</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Role</th>
                <th scope="col">Email</th>
                <th scope="col">Valider</th>
                <th scope="col">Rejeter</th>
            </tr>
        </thead>
        <tbody>
            {% for userCandidat in userCandidats %}
            <tr class="table-secondary">
                <th scope="row">{{ userCandidat.id }}</th>
                <td>{{ userCandidat.Role }}</td>
                <td>{{ userCandidat.Email }}</td>
                <td>
                    <a href="{{ path('consultant.validate.candidat', { id: userCandidat.id }) }}"
                        class="btn btn-success">Valider</a>
                </td>
                <td>
                    <a href="{{ path('consultant.reject.candidat', { id: userCandidat.id }) }}"
                        class="btn btn-danger">Rejeter</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<div class="container mt-4">
    <h1>Listes des recruteurs à valider</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Role</th>
                <th scope="col">Email</th>
                <th scope="col">Valider</th>
                <th scope="col">Rejeter</th>
            </tr>
        </thead>
        <tbody>
            {% for userRecruteur in userRecruteurs %}
            <tr class="table-secondary">
                <th scope="row">{{ userRecruteur.id }}</th>
                <td>{{ userRecruteur.Role }}</td>
                <td>{{ userRecruteur.Email }}</td>
                <td>
                    <a href="{{ path('consultant.validate.recruteur', { id: userRecruteur.id }) }}"
                        class="btn btn-success">Valider</a>
                </td>
                <td>
                    <a href="{{ path('consultant.reject.recruteur', { id: userRecruteur.id }) }}"
                        class="btn btn-danger">Rejeter</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<div class="container mt-4">
    <h1>Listes des annonces à valider</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Entreprise</th>
                <th scope="col">Poste</th>
                <th scope="col">Emplacement</th>
                <th scope="col">Description</th>
                <th scope="col">Valider</th>
                <th scope="col">Rejeter</th>
            </tr>
        </thead>
        <tbody>
            {% for recAnnonce in recAnnonces %}
            <tr class="table-secondary">
                <th scope="row">{{ recAnnonce.id }}</th>
                <td>{{ recAnnonce.Recruteur.Company }}</td>
                <td>{{ recAnnonce.JobTitle }}</td>
                <td>{{ recAnnonce.WorkPlace }}</td>
                <td>{{ recAnnonce.Description }}</td>
                <td>
                    <a href="{{ path('consultant.validate.annonce', { id: recAnnonce.id }) }}"
                        class="btn btn-success">Valider</a>
                </td>
                <td>
                    <a href="{{ path('consultant.reject.annonce', { id: recAnnonce.id }) }}"
                        class="btn btn-danger">Rejeter</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<div class="container mt-4">
    <h1>Listes des candidature à valider</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Poste</th>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
                <th scope="col">CV</th>
                <th scope="col">Valider</th>
                <th scope="col">Rejeter</th>
            </tr>
        </thead>
        <tbody>
            {% for canCandidature in canCandidatures %}
            <tr class="table-secondary">
                <th scope="row">{{ canCandidature.id }}</th>
                <td>{{ canCandidature.Annonce.JobTitle }}</td>
                <td>{{ canCandidature.Candidat.Nom }}</td>
                <td>{{ canCandidature.Candidat.Prenom }}</td>
                <td><a href="{{ 'uploads/cv/' ~ canCandidature.Candidat.Cv }}" class="btn btn-secondary"
                        target="_blank">Consulter le
                        CV</a></td>
                <td>
                    <a href="{{ path('consultant.validate.candidature', { id: canCandidature.id }) }}"
                        class="btn btn-success">Valider</a>
                </td>
                <td>
                    <a href="{{ path('consultant.reject.candidature', { id: canCandidature.id }) }}"
                        class="btn btn-danger">Rejeter</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}