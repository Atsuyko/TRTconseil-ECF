{% extends 'base.html.twig' %}

{% block title %}Candidatures{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Listes des candidatures</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Poste</th>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
                <th scope="col">Email</th>
                <th scope="col">CV</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for canCandidature in canCandidatures %}
            <tr class="table-secondary">
                <th scope="row">{{ canCandidature.id }}</th>
                <td>{{ canCandidature.Annonce.JobTitle }}</td>
                <td>{{ canCandidature.Candidat.Nom }}</td>
                <td>{{ canCandidature.Candidat.Prenom }}</td>
                <td>{{ canCandidature.Candidat.User.email }}</td>
                <td><a href="{{ 'uploads/cv/' ~ canCandidature.Candidat.Cv }}" class="btn btn-secondary"
                        target="_blank">Consulter le
                        CV</a></td>
                <td>
                    <a href="{{ path('candidature.delete', { id: canCandidature.id }) }}"
                        class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}