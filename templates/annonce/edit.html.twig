{% extends "base.html.twig" %}

{% block body %}
<div class="container">

  <h1 class="mt-4">Modifier l'annonce</h1>

  {{ form_start(form) }}

  <div class="form-group">
    {{ form_label(form.job_title) }}
    {{ form_widget(form.job_title) }}
    <div class="form-error">
      {{ form_errors(form.job_title) }}
    </div>
  </div>
  <div class="form-group">
    {{ form_label(form.work_place) }}
    {{ form_widget(form.work_place) }}
    <div class="form-error">
      {{ form_errors(form.work_place) }}
    </div>
  </div>
  <div class="form-group">
    {{ form_label(form.description) }}
    {{ form_widget(form.description) }}
    <div class="form-error">
      {{ form_errors(form.description) }}
    </div>
  </div>
  <div class="form-group">
    {{ form_row(form.submit) }}
  </div>
</div>
{{ form_end(form) }}
</div>{% endblock body %}